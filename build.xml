<?xml version="1.0" encoding="UTF-8"?>
<project name="ciexperiment">
  <path id="path">
    <pathelement path="build"/>
    <fileset dir="lib">
      <include name="urn.com.ten60.*.jar"/>
      <include name="testng*.jar"/>
      <include name="xerces*.jar"/>
    </fileset>
  </path>
  
  <target name="init">
    <mkdir dir="build"/>
  </target>
  
  <target name="clean">
    <delete>
      <fileset dir="build"/>
    </delete>
  </target>
  
  <target name="build" depends="init">
    <javac classpathref="path" srcdir="testNG-nk4" destdir="build"/>
  </target>
  
  <target name="test" depends="build">
    <java  classpathref="path" classname="uk.org.onegch.netkernel.testNG.TestRunner"/>
  </target>
</project>