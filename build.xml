<?xml version="1.0" encoding="UTF-8"?>
<project name="testNG-nk4">
  <property name="version" value="0_1"/>
  
  <path id="path">
    <pathelement path="build/"/>
    <fileset dir="lib">
      <include name="*.jar"/>
    </fileset>
  </path>
  
  <target name="init">
    <mkdir dir="build"/>
  </target>
  
  <target name="clean">
    <deltree dir="build"/>
  </target>
  
  <target name="build" depends="init">
    <javac classpathref="path" srcdir="src" destdir="build"/>
  </target>
  
  <target name="package" depends="build">
    <zip destfile="testNG-nk4-${version}.zip">
      <zipfileset dir="build" prefix="testNG-nk4-${version}/"/>
      <zipfileset dir="lib" prefix="testNG-nk4-${version}/lib"/>
      <zipfileset dir="etc" prefix="testNG-nk4-${version}/etc"/>
      <zipfileset dir="src" prefix="testNG-nk4-${version}/src"/>
    </zip>
  </target>
</project>